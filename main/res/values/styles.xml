<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/toolbarColorDark</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="AppTheme.MaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#f27c21</item>
        <item name="android:textColor">#fcd837</item>
    </style>





</resources>
