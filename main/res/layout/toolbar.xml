<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/toolbarColor"
    app:contentInsetStart="0dp">

    <ImageView
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:src="@drawable/ico_cricket"
        android:padding="@dimen/margin_5dp"/>


    <org.ksconnect.udacityandroidproject.TypeFaced.TypefacedTextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_5dp"
        android:textColor="@color/toolbarColorFont"
        android:text="@string/cricket_dreamz"
        app:typeface="Nunito-Black.ttf"
        android:layout_marginRight="@dimen/margin_50dp"
        android:textSize="20sp" />


</android.support.v7.widget.Toolbar>



